        <jsqlbox.version>4.0.6.jre8</jsqlbox.version>
        <httpclient.version>4.5.9</httpclient.version>
        <nsc.file-storage.api.version>1.0.0-SNAPSHOT</nsc.file-storage.api.version>
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
